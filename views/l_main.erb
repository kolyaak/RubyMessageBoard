<!doctype html>
<html lang=en>
  <head>
    <link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
    <link href="https://fonts.googleapis.com/css?family=Nunito" rel="stylesheet">
    <meta charset=utf-8>
    <title>Message Board</title>
  </head>
  <body>
    <div class="pageheader">
      <h1>Message Board</h1>
    </div>
    <div class="pagesubheader">
      <h3>&copy; 2019 nlharri</h3>
    </div>
    
    <% t_val_error.each do |error_msg| %>
    <div class="speech-bubble-error">
      <p class="nick">Error: <%= error_msg %></p>
    </div>
    <% end %>

    <div class="speech-bubble">
      <form method="POST" action="/newmessage" id="newmessage">
        <p class="nick"><input id="nick" type="text" placeholder="Nickname" name="nickname"></p>
        <p class="message"><textarea id="message" placeholder="Message" name="message" form="newmessage"></textarea></p>
        <p class="submit"><button id="button" class="submit" type="submit" form="newmessage" value="Submit">I say this!</button></p>
      </form>
    </div>
    
    <%= yield %>

  </body>
</html>
